@using Microsoft.AspNetCore.Http.Extensions
@model IEnumerable<Producto>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-sm-6">
            <div class="card">

                <img class="card-img-top" src="..." alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayText(item.FiProdId.ToString())</h5>
                    <p class="card-text">@Html.DisplayText(item.FcProdDesc)</p>
                </div>
                <div class="card-footer">
                   @* <small class="text-muted">Last updated 3 mins ago</small>*@
                   <div>
                        @Html.DisplayText(item.FnProdPrecio.ToString())
                   </div>
                   @* <a asp-controller="Home" asp-action="Buy" asp-route-id="@item.FiProdId">Buy Now</a>*@
                   
                   @Html.BeginForm("AddToCart","Home"){
                      @* @Html.HiddenFor(item.FiProdId.ToString())*@
                    @Html.Hidden("returnUrl",@Context.Request.GetEncodedUrl())
                       <input   type="submit" value="+ Add to cart"/>
                   }
                </div>
            </div>
        </div>
    }




</div>